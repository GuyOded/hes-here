{
  "include": ["./source/**/*"],
  "exclude": ["./dist"],
  "compilerOptions": {
    "noImplicitAny": true,
    "incremental": true,
    "target": "es5",                          
    "module": "commonjs",                     
    "outDir": "./dist",
    "strict": true,                           
    "baseUrl": "./",                       
    "paths": {
      "*": ["node_modules"]
    },
    "esModuleInterop": true,                  
    "skipLibCheck": true,  
    "forceConsistentCasingInFileNames": true
  }
}
